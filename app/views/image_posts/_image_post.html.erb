<div class="card">
    <div class="card-header">
       <h3 class="card-title">
         <%= image_post.title %>
        </h3> 
    </div>

    <div class="card-body">
       <p><em>By <%= image_post.user.name %></em></p>

        <%= image_tag image_post.url, class: "img-fluid" %>
       
       <%= image_post.body %>
    </div>
</div>