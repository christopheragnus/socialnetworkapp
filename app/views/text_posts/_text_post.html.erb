<div class="card">
    <div class="card-header">
        <h3 class = "card-title">
        <%= text_post.title %>
        </h3>
        <%= time_ago_in_words(Time.now) %>
    </div>


    <div class="card-body">
        <p><em> By <%= text_post.user.name %></em></p>
   

            <%= text_post.body %>

            <% if text_post.user == current_user %>
      <p>
        <%= link_to 'Edit', edit_text_post_path(text_post),
                    class: "btn btn-primary" %>
      </p>
        <% end %>

        </div>
    </div>
